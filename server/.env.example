# GhosttlyTermLinkkY Server Configuration
# Copy to .env and customize

# Server
PORT=3847
HOST=0.0.0.0

# Authentication - Generate secure tokens!
# Run: npm run setup
AUTH_TOKEN=your-secure-auth-token
JWT_SECRET=your-secure-jwt-secret

# Terminal
SHELL=/bin/zsh
DEFAULT_CWD=/Users/yourname/developer

# Limits
MAX_SESSIONS=5
SESSION_TIMEOUT=3600000

# Features
CLAUDE_ENABLED=true
